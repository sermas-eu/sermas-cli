{
  "compilerOptions": {
    "lib": [
      "ES2020",
      "dom"
    ],
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "declaration": true,
    "outDir": "./dist",
    "noEmit": false,
    "importHelpers": false,
    "noImplicitAny": false,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src",
  },
  "exclude": [
    "node_modules",
    "__tests__"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/**/*.ts",
    "src/**.ts",
  ],
  "compileOnSave": false,
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}